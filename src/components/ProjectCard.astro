---
const { title, description, tags, imageUrl, link } = Astro.props;
---

<div class="bg-[#2c344c] opacity-90 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 z-20">
  <a href={link} target="_blank" rel="noopener noreferrer">
      <img src={imageUrl} alt={title} class="w-full h-48 object-cover hover:scale-105 transform transition duration-300"/>
    <div class="p-4">
      <h3 class="text-xl font-semibold text-[#f8c450] mb-2">{title}</h3>
      <p class="text-[#9cccd4] mb-4" set:html={description}></p>
      <div class="flex flex-wrap gap-2">
        {tags.map((tag: unknown) => (
          <span class="text-xs bg-[#8c6c34] text-white px-2 py-1 rounded-full">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </a>
</div>
