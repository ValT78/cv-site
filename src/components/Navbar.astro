---
const navLinks = [
  { label: 'Accueil', href: '#hero' },
  { label: ' propos', href: '#about' },
  { label: 'Compétences', href: '#skills' },
  { label: 'Expériences', href: '#experience' },
  { label: 'Projets', href: '#projects' },
  { label: 'Contact', href: '#contact' }
];
---


<nav class="fixed top-0 left-0 w-full bg-[#9cccd4] shadow-md z-50">
  <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <div class="text-xl font-bold text-[#2c344c]">
      Valentin Lantigny
    </div>
    <div class="space-x-4">
      {navLinks.map(link => (
        <a 
          href={link.href}
          class="text-[#2c344c] hover:text-[#8c6c34] transition-colors duration-300"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>