---
import Dropdown from './Dropdown.svelte';

const navLinks = [
  { label: 'Accueil', href: '#hero', icon: '🏠' },
  { label: 'Projets', href: '#projects', icon: '🛠️' },
  { label: 'Expériences', href: '#experience', icon: '📜' }
];



