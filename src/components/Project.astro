---
import ProjectCard from "./ProjectCard.astro";
import { projects } from "../data/projets.ts";

---

<section id="projects" class="py-20 bg-[#677c8d] text-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-[#f8b730] mb-12 text-center">Projets Phares</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(proj => (
        <ProjectCard {...proj} />
      ))}
    </div>
  </div>
</section>